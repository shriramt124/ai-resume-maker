<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Resume</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            max-width: 800px;
            margin: 0 auto;
            padding: 40px;
            background-color: #f5f5f5;
            color: #333;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .name {
            font-size: 2.5em;
            color: #2c3e50;
            margin: 0;
        }

        .contact-info {
            margin: 15px 0;
            font-size: 0.9em;
            color: #7f8c8d;
        }

        .contact-info a {
            color: #3498db;
            text-decoration: none;
            margin: 0 10px;
        }

        .section {
            margin-bottom: 25px;
        }

        .section-title {
            color: #2c3e50;
            border-bottom: 2px solid #3498db;
            padding-bottom: 5px;
            margin-bottom: 15px;
            font-size: 1.5em;
        }

        .job {
            margin-bottom: 15px;
        }

        .job-title {
            font-weight: bold;
            color: #2c3e50;
            margin: 5px 0;
        }

        .company {
            color: #7f8c8d;
            margin: 5px 0;
        }

        .date-range {
            color: #95a5a6;
            font-style: italic;
        }

        .project {
            margin-bottom: 15px;
        }

        .project-name {
            font-weight: bold;
            color: #2c3e50;
        }

        .tech-stack {
            color: #3498db;
            margin: 5px 0;
        }

        .link {
            color: #3498db;
            text-decoration: none;
        }

        .skills,
        .certifications,
        .achievements {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }

        .skill-item,
        .cert-item,
        .achievement-item {
            background: #ecf0f1;
            padding: 10px;
            border-radius: 4px;
        }

        .impact {
            font-weight: bold;
            color: #2c3e50;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="name">{{personalInfo.fullName}}</div>
        <div class="contact-info">
            {{#if personalInfo.email}}
                <span>Email: {{personalInfo.email}}</span>
            {{/if}}
            {{#if personalInfo.phone}}
                <span>Phone: {{personalInfo.phone}}</span>
            {{/if}}
            {{#if personalInfo.location}}
                <span>Location: {{personalInfo.location}}</span>
            {{/if}}
            {{#if personalInfo.linkedIn}}
                <a href="{{personalInfo.linkedIn}}">LinkedIn</a>
            {{/if}}
            {{#if personalInfo.github}}
                <a href="{{personalInfo.github}}">GitHub</a>
            {{/if}}
            {{#if personalInfo.portfolio}}
                <a href="{{personalInfo.portfolio}}">Portfolio</a>
            {{/if}}
        </div>
    </div>

    {{#if personalInfo.summary}}
    <div class="section">
        <div class="section-title">Professional Summary</div>
        <p>{{personalInfo.summary}}</p>
    </div>
    {{/if}}

    <div class="section">
        <div class="section-title">Experience</div>
        {{#each experience}}
        <div class="job">
            <div class="job-title">{{position}}</div>
            <div class="company">{{company}}</div>
            <div class="date-range">
                {{startDate}} - {{#if current}}Present{{else}}{{endDate}}{{/if}}
            </div>
            <p>{{description}}</p>
        </div>
        {{/each}}
    </div>

    <div class="section">
        <div class="section-title">Education</div>
        {{#each education}}
        <div class="education-item">
            <div class="degree">{{degree}} in {{field}}</div>
            <div class="institution">{{institution}}</div>
            <div class="graduation">Graduated: {{graduationDate}} | GPA: {{gpa}}</div>
        </div>
        {{/each}}
    </div>

    <div class="section">
        <div class="section-title">Projects</div>
        {{#each projects}}
        <div class="project">
            <div class="project-name">{{name}}</div>
            <p>{{description}}</p>
            {{#if technologies}}
                <div class="tech-stack">Tech Stack: {{technologies}}</div>
            {{/if}}
            {{#if link}}
                <div><a class="link" href="{{link}}">View Project</a></div>
            {{/if}}
        </div>
        {{/each}}
    </div>

    {{#if skills}}
    <div class="section">
        <div class="section-title">Skills</div>
        <div class="skills">
            {{#if skills.technical}}
                <div class="skill-item">
                    <strong>Technical:</strong> {{skills.technical}}
                </div>
            {{/if}}
            {{#if skills.soft}}
                <div class="skill-item">
                    <strong>Soft Skills:</strong> {{skills.soft}}
                </div>
            {{/if}}
            {{#if skills.languages}}
                <div class="skill-item">
                    <strong>Languages:</strong> {{skills.languages}}
                </div>
            {{/if}}
        </div>
    </div>
    {{/if}}

    {{#if certifications}}
    <div class="section">
        <div class="section-title">Certifications</div>
        <div class="certifications">
            {{#each certifications}}
            <div class="cert-item">
                <div class="cert-name">{{name}}</div>
                <div class="issuer">{{issuer}}</div>
                <div class="date">{{date}}</div>
                {{#if link}}
                    <a class="link" href="{{link}}">View Certification</a>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}

    {{#if achievements}}
    <div class="section">
        <div class="section-title">Achievements</div>
        <div class="achievements">
            {{#each achievements}}
            <div class="achievement-item">
                <div class="title">{{title}}</div>
                {{#if description}}
                    <div class="description">{{description}}</div>
                {{/if}}
                {{#if impact}}
                    <div class="impact">Impact: {{impact}}</div>
                {{/if}}
                {{#if date}}
                    <div class="date">{{date}}</div>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
</body>
</html>