<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Resume</title>
    <style>
        @page {
            size: A4;
            margin: 0;
        }

        html {
            background-color: #f5f5f5;
        }

        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            min-height: 900px;
            margin: 0 auto;
            background-color: #fff;
            color: #333;
            box-sizing: border-box;
            overflow-x: hidden;
        }

        .page {
            position: relative;
            padding: 20px;
            box-sizing: border-box;
            background-color: #fff;
            margin-bottom: 20px;
        }

        /* Add margin-top for pages after the first one */
        .page:not(:first-child) {
            margin-top: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .name {
            font-size: 2em;
            color: #000;
            margin: 0;
        }

        .contact-info {
            margin: 15px 0;
            font-size: 0.9em;
            color: #7f8c8d;
        }

        .section-title {
            color: #000;
            border-bottom: 1px solid #000;
            padding-bottom: 5px;
            margin-bottom: 10px;
            font-size: 1.2em;
        }

        .job-title {
            font-weight: bold;
            color: #000;
            margin: 5px 0;
        }

        .company {
            color: #7f8c8d;
            margin: 5px 0;
        }

        .date-range {
            color: #95a5a6;
            font-style: italic;
        }

        .project-name {
            font-weight: bold;
            color: #000;
            margin-bottom: 5px;
        }

        .tech-stack {
            color: #3498db;
            margin: 5px 0;
        }

        .link {
            color: #3498db;
            text-decoration: none;
            display: block;
            margin: 5px 0 15px 0;
        }

        .skills,
        .certifications,
        .achievements {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }

        .skill-item,
        .cert-item,
        .achievement-item {
            background: #ecf0f1;
            padding: 10px;
            border-radius: 4px;
        }

        /* Add print-specific styles */
        @media print {
            .page {
                break-after: page;
                page-break-after: always;
            }

            .page:not(:first-child) {
                margin-top: 0;
                /* Reset for print, as physical page breaks handle spacing */
            }

            body {
                margin: 0;
                padding: 0;
                background-color: #fff;
            }
        }
    </style>
</head>

<body>
    <div class="page">
        <div class="header">
            <div class="name">{{personalInfo.fullName}}</div>
            <div class="contact-info">
                {{#if personalInfo.email}}
                <span>Email: {{personalInfo.email}}</span>
                {{/if}}
                {{#if personalInfo.phone}}
                <span>Phone: {{personalInfo.phone}}</span>
                {{/if}}
                {{#if personalInfo.location}}
                <span>Location: {{personalInfo.location}}</span>
                {{/if}}
                {{#if personalInfo.linkedIn}}
                <a href="{{personalInfo.linkedIn}}">LinkedIn</a>
                {{/if}}
                {{#if personalInfo.github}}
                <a href="{{personalInfo.github}}">GitHub</a>
                {{/if}}
                {{#if personalInfo.portfolio}}
                <a href="{{personalInfo.portfolio}}">Portfolio</a>
                {{/if}}
            </div>
        </div>
        {{#if personalInfo.summary}}
        <div class="section">
            <div class="section-title">Professional Summary</div>
            <p>{{personalInfo.summary}}</p>
        </div>
        {{/if}}
        {{#if education}}
        <div class="section">
            <div class="section-title">Education</div>
            {{#each education}}
            <div class="education-item">
                <div class="degree">{{degree}} in {{field}}</div>
                <div class="institution">{{institution}}</div>
                <div class="graduation">Graduated: {{graduationDate}} | GPA: {{gpa}}</div>
            </div>
            {{/each}}
        </div>
        {{/if}}
        {{#if experience}}
        <div class="section">
            <div class="section-title">Experience</div>
            {{#each experience}}
            <div class="job">
                <div class="job-title">{{position}}</div>
                <div class="company">{{company}}</div>
                <div class="date-range">
                    {{startDate}} - {{#if current}}Present{{else}}{{endDate}}{{/if}}
                </div>
                <ul>
                    <li>{{description}}</li>
                </ul>
            </div>
            {{/each}}
        </div>
        {{/if}}
        {{#if skills}}
        <div class="section">
            <div class="section-title">Skills</div>
            <div class="skills">
                {{#if skills.technical}}
                <div class="skill-item">
                    <strong>Technical:</strong> {{skills.technical}}
                </div>
                {{/if}}
                {{#if skills.soft}}
                <div class="skill-item">
                    <strong>Soft Skills:</strong> {{skills.soft}}
                </div>
                {{/if}}
                {{#if skills.languages}}
                <div class="skill-item">
                    <strong>Languages:</strong> {{skills.languages}}
                </div>
                {{/if}}
            </div>
        </div>
        {{/if}}
        {{#if projects}}
        <div class="section">
            <div class="section-title">Projects</div>
            {{#each projects}}
            <div class="project">
                <div class="project-name">{{name}}</div>
                <p>{{description}}</p>
                {{#if technologies}}
                <div class="tech-stack">Tech Stack: {{technologies}}</div>
                {{/if}}
                {{#if link}}
                <a class="link" href="{{link}}">View Project</a>
                {{/if}}
            </div>
            {{/each}}
        </div>
        {{/if}}
        {{#if achievements}}
        <div class="section">
            <div class="section-title">Achievements</div>
            <div class="achievements">
                {{#each achievements}}
                <div class="achievement-item">
                    <div class="title">{{title}}</div>
                    {{#if description}}
                    <div class="description">{{description}}</div>
                    {{/if}}
                    {{#if impact}}
                    <div class="impact">Impact: {{impact}}</div>
                    {{/if}}
                    {{#if date}}
                    <div class="date">{{date}}</div>
                    {{/if}}
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}
        {{#if certifications}}
        <div class="section">
            <div class="section-title">Certifications</div>
            <div class="certifications">
                {{#each certifications}}
                <div class="cert-item">
                    <div class="cert-name">{{name}}</div>
                    <div class="issuer">{{issuer}}</div>
                    <div class="date">{{date}}</div>
                    {{#if link}}
                    <a class="link" href="{{link}}">View Certification</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}
    </div>

    <script>
        // Script to handle automatic pagination
        document.addEventListener('DOMContentLoaded', function () {
            const CONTENT_HEIGHT_THRESHOLD = 760; // A4 height minus margins in pixels
            const page = document.querySelector('.page');
            page.classList.add('first-page'); // Mark the first page

            function handlePagination() {
                const sections = Array.from(document.querySelectorAll('.section'));
                let currentPage = page;
                let currentPageHeight = 0;

                sections.forEach((section, index) => {
                    const sectionHeight = section.offsetHeight;
                    if (currentPageHeight + sectionHeight > CONTENT_HEIGHT_THRESHOLD && index > 0) {
                        const newPage = document.createElement('div');
                        newPage.className = 'page subsequent-page'; // Add an identifying class
                        document.body.appendChild(newPage);
                        newPage.appendChild(section);
                        currentPage = newPage;
                        currentPageHeight = sectionHeight;
                    } else {
                        currentPageHeight += sectionHeight;
                    }
                });
            }

            setTimeout(handlePagination, 100);
        });
    </script>
</body>

</html>